


<%= form_tag({controller: "conversations", action: "create"}) do %>

<%= label_tag :subject %>
<%= text_field_tag :subject %>
<%= label :body, "Message text" %>
<%= text_area_tag :body %>
<%= hidden_field_tag(:user_id, "#{@user.id}") %>
<%= submit_tag 'Send message', class: "btn btn-primary" %>
<% end %>
